func test_do_while() {
    mut bool test := true;
    

    printf("\n\nBoucle avec break\n--------\n");
    mut int32 i := 0;
    while i < 5 {
        printf("Allo\n");
        break;
        printf("ads\n");
        i += 1;
    }

    printf("\n\nBoucle sans break\n--------\n");
    i := 0;
    do {
        printf("Allo\n");
        printf("ads\n");
        i += 1;
    }while i < 5;
    
}

