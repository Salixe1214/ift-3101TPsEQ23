        printf("ext1\n");
        while i < 3 as nice {
            printf("inner\n");
            break troll;
            i := i + 1;
            printf("inner2\n");
        }
        i := 0;
        printf("ext2\n");
    }

    printf("\nFor avec continue\n--------\n");
    for mut int32 i:=0; i<3; i+=1 as bebe {
		for mut int32 j:=0; j<3; j+=1 as lala {
			printf("i:= %d j:= %d \n", i, j);
            continue bebe;
		}
        printf("Hi");
	}
    printf("\nFor avec continue\n--------\n");
    for mut int32 i:=0; i<3; i+=1 as bebe {
